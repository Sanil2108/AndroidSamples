<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/activity_main_vector_animation"
        android:text="Vector animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/activity_main_crossfade_animation"
        android:text="Crossfade animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/activity_main_property_animator"
        android:text="Propery animations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/activity_main_fling_animation"
        android:text="animations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/activity_main_layout_changes"
        android:text="Layout changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>